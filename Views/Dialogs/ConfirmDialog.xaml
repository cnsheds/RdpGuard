<Window x:Class="OpenRdpGuard.Views.Dialogs.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="提示"
        Height="180"
        Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource AppBackgroundBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="MessageText"
                   Text="提示内容"
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource PrimaryTextBrush}" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="CancelButton" Content="取消" Width="80" Margin="0,0,8,0"
                    Style="{StaticResource PrimaryButtonStyle}" Click="Cancel_Click" />
            <Button Content="确定" Width="80"
                    Style="{StaticResource PrimaryButtonStyle}" Click="Ok_Click" />
        </StackPanel>
    </Grid>
</Window>
