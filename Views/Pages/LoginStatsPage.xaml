<Page x:Class="OpenRdpGuard.Views.Pages.LoginStatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:conv="clr-namespace:OpenRdpGuard.Converters"
      xmlns:vm="clr-namespace:OpenRdpGuard.ViewModels"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance vm:LoginStatsViewModel, IsDesignTimeCreatable=True}">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <conv:CountToMaxRowsHeightConverter x:Key="CountToMaxRowsHeightConverter" />
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Margin="12">
            <Border Style="{StaticResource CardBorderStyle}" HorizontalAlignment="Stretch">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="&#xE9D2;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" Foreground="{DynamicResource MutedTextBrush}" VerticalAlignment="Center" />
                        <TextBlock Text="登录统计" Style="{StaticResource PageTitleTextStyle}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="统计最近" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="{DynamicResource SecondaryTextBrush}" />
                        <ComboBox Width="90" ItemsSource="{Binding RangeOptions}" SelectedItem="{Binding SelectedRange}" />
                        <Button Content="刷新统计" Margin="12,0,0,0" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding RefreshCommand}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Visibility="{Binding ShowWarning, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="&#xE814;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource WarningBrush}" Margin="0,0,6,0" />
                        <TextBlock Text="{Binding WarningMessage}" Foreground="{DynamicResource WarningBrush}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardBorderStyle}" HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock Text="统计结果" Style="{StaticResource PageTitleTextStyle}" Margin="0,0,0,8" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Visibility="{Binding IsScanning, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="&#xE71C;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource MutedTextBrush}" Margin="0,0,6,0" VerticalAlignment="Center" />
                        <TextBlock Text="正在扫描日志..." Foreground="{DynamicResource MutedTextBrush}" VerticalAlignment="Center" />
                    </StackPanel>

                    <Grid Margin="0,0,0,12" Visibility="{Binding IsNotScanning, Converter={StaticResource BoolToVis}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#F3DEDE" BorderBrush="#E8CACA" BorderThickness="1" CornerRadius="8" Padding="14" Margin="0,0,10,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,6">
                                    <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource DangerBrush}" Margin="0,0,6,0" VerticalAlignment="Center" />
                                    <TextBlock Text="失败登录" Foreground="{DynamicResource DangerBrush}" FontWeight="SemiBold" VerticalAlignment="Center" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding FailedCount}" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource DangerBrush}" />
                                    <TextBlock Text=" 次" FontSize="16" Foreground="{DynamicResource DangerBrush}" Margin="6,6,0,0" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="#E2F0E2" BorderBrush="#CFE2CF" BorderThickness="1" CornerRadius="8" Padding="14" Margin="10,0,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,6">
                                    <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource SuccessBrush}" Margin="0,0,6,0" VerticalAlignment="Center" />
                                    <TextBlock Text="成功登录" Foreground="{DynamicResource SuccessBrush}" FontWeight="SemiBold" VerticalAlignment="Center" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding SuccessCount}" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}" />
                                    <TextBlock Text=" 次" FontSize="16" Foreground="{DynamicResource SuccessBrush}" Margin="6,6,0,0" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6" Visibility="{Binding IsNotScanning, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" Foreground="{DynamicResource MutedTextBrush}" />
                        <TextBlock Text="失败登录 Top IP（可能的攻击来源）" Style="{StaticResource SectionTitleTextStyle}" />
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding TopFailedIps}"
                                  Visibility="{Binding IsNotScanning, Converter={StaticResource BoolToVis}}"
                                  MaxHeight="{Binding TopFailedIps.Count, Converter={StaticResource CountToMaxRowsHeightConverter}, ConverterParameter=38}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="210" Margin="0,2,10,6" Padding="8,4" Background="#26E06B6B" CornerRadius="6">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" Fill="{DynamicResource DangerBrush}" Margin="0,0,8,0" />
                                        <TextBlock Text="{Binding Label}" Foreground="{DynamicResource DangerBrush}" />
                                        <TextBlock Text=" - " Foreground="{DynamicResource DangerBrush}" />
                                        <TextBlock Text="{Binding Count}" Foreground="{DynamicResource DangerBrush}" />
                                        <TextBlock Text=" 次" Foreground="{DynamicResource DangerBrush}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel Orientation="Horizontal" Margin="0,12,0,6" Visibility="{Binding IsNotScanning, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" Foreground="{DynamicResource MutedTextBrush}" />
                        <TextBlock Text="成功登录 Top IP:" Style="{StaticResource SectionTitleTextStyle}" />
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding TopSuccessIps}"
                                  Visibility="{Binding IsNotScanning, Converter={StaticResource BoolToVis}}"
                                  MaxHeight="{Binding TopSuccessIps.Count, Converter={StaticResource CountToMaxRowsHeightConverter}, ConverterParameter=38}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="210" Margin="0,2,10,6" Padding="8,4" Background="#2637B24D" CornerRadius="6">
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="8" Height="8" Fill="{DynamicResource SuccessBrush}" Margin="0,0,8,0" />
                                        <TextBlock Text="{Binding Label}" Foreground="{DynamicResource SuccessBrush}" />
                                        <TextBlock Text=" - " Foreground="{DynamicResource SuccessBrush}" />
                                        <TextBlock Text="{Binding Count}" Foreground="{DynamicResource SuccessBrush}" />
                                        <TextBlock Text=" 次" Foreground="{DynamicResource SuccessBrush}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel Orientation="Horizontal" Margin="0,12,0,6" Visibility="{Binding IsNotScanning, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" Foreground="{DynamicResource MutedTextBrush}" />
                        <TextBlock Text="尝试登录的失败账号:" Style="{StaticResource SectionTitleTextStyle}" />
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding TopFailedUsers}"
                                  Visibility="{Binding IsNotScanning, Converter={StaticResource BoolToVis}}"
                                  MaxHeight="{Binding TopFailedUsers.Count, Converter={StaticResource CountToMaxRowsHeightConverter}, ConverterParameter=30}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource WarningBrush}" Margin="0,0,6,0" />
                                    <TextBlock Text="{Binding Label}" Foreground="{DynamicResource WarningBrush}" />
                                    <TextBlock Text=" - " Foreground="{DynamicResource WarningBrush}" />
                                    <TextBlock Text="{Binding Count}" Foreground="{DynamicResource WarningBrush}" />
                                    <TextBlock Text=" 次" Foreground="{DynamicResource WarningBrush}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
